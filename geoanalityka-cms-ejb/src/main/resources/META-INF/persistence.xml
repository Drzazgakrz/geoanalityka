<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="geoanalityka_pu">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/geoanalitykaDS</jta-data-source>
		<class>pl.gisexpert.cms.model.Account</class>
		<class>pl.gisexpert.cms.model.CompanyAccount</class>
		<class>pl.gisexpert.cms.model.NaturalPersonAccount</class>
		<class>pl.gisexpert.cms.model.Address</class>
		<class>pl.gisexpert.cms.model.AccessToken</class>
		<class>pl.gisexpert.cms.model.Company</class>
		<class>pl.gisexpert.cms.model.LoginAttempt</class>
		<class>pl.gisexpert.cms.model.Order</class>
		<class>pl.gisexpert.cms.model.Invoice</class>
		<class>pl.gisexpert.cms.model.Role</class>
		<class>pl.gisexpert.cms.model.ResetPassword</class>
		<class>pl.gisexpert.cms.model.AccountConfirmation</class>
		<class>pl.gisexpert.cms.model.analysis.demographic.DemographicAnalysis</class>
		<class>pl.gisexpert.cms.model.analysis.demographic.AdvancedDemographicAnalysis</class>
		<class>pl.gisexpert.cms.model.analysis.demographic.SimpleDemographicAnalysis</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/init_db.sql" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<!-- <property name="javax.persistence.schema-generation.database.action" 
				value="none"/> <property name="hibernate.archive.autodetection" value="class"/> 
				<property name="hibernate.hbm2ddl.auto" value="" /> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		</properties>
	</persistence-unit>

</persistence>
